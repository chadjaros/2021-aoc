{
    "compilerOptions": {
        "lib": ["esnext"],
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "sourceMap": true,
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "outDir": "build",
        "noEmit": false,
        "moduleResolution": "node",
        "esModuleInterop": true
    }
}
